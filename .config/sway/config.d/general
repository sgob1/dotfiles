set $mod Mod4
set $left h
set $down j
set $up k
set $right l

set $term footclient
#set $term alacritty

set $lockscreen swaylock --image $wallpaper_dir/$(ls $wallpaper_dir | shuf -n 1) # sets a random wallpaper as lockscreen
set $lockscreen_turnoff_after 5
exec swayidle -w \
	timeout $lockscreen_turnoff_after 'if pgrep swaylock; then swaymsg "output * dpms off"; fi' \
	resume 'swaymsg "output * dpms on"' \
	before-sleep '$lockscreen'
xwayland enable
input * {
	xkb_layout "it"
	xkb_options "grp:win_space_toggle"
	repeat_delay 500
	repeat_rate 60
}
input type:touchpad {
	tap enabled
	natural_scroll enabled
	accel_profile adaptive
	pointer_accel 0.05
	dwt enabled
}

focus_follows_mouse no
