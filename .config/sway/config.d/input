input * {
    xkb_layout "it"
    xkb_options "grp:win_space_toggle"
    repeat_delay 500
    repeat_rate 30
}

input type:touchpad {
    tap enabled
    natural_scroll enabled
    accel_profile adaptive
    pointer_accel 0.05
    dwt enabled
}

input type:tablet_pad {
    map_to_output eDP-1
}

input type:tablet_tool {
    map_to_output eDP-1
}
