# Key bindings
bindsym Ctrl+Mod1+T exec $term
bindsym $mod+Return exec $term
floating_modifier $mod normal
bindsym $mod+Shift+q kill
bindsym $mod+Shift+c reload
#bindsym $mod+Shift+p exec setrandom --mode scale $wallpaper_dir
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

bindsym $mod+x exec PATH=$HOME/.local/bin:$PATH bemenu-run -i --nb $background --nf $text --hb $dmenu_accent --hf $background --fb $background --ff $text --tb $dmenu_accent --tf $background --fn "Iosevka Slab Heavy 11" -p "Shell " --line-height 23 | xargs swaymsg exec --
bindsym $mod+d exec j4-dmenu-desktop --dmenu='bemenu -i --nb $background --nf $text --hb $j4_accent --hf $background --fb $background --ff $text --tb $j4_accent --tf $background --fn "Iosevka Slab Heavy 11" -p "Application " --line-height 23' | xargs swaymsg exec --
#bindsym $mod+d exec 'fuzzel --border-color=$fuzzel_accent --border-radius=5 --border-width=2 --background=$background --selection-color=$fuzzel_accent --selection-text-color=$background --match-color=$accent --text-color=$text --font "Iosevka SS15 Medium:size=8.5" --fields=filename,name,generic,exec --lines=15 --width=80'
bindsym $mod+m exec grep -v '^#' ~/org/bookmarks | grep . | bemenu -i -l 8 --nb $background --nf $text --hb $dmenu_accent --hf $background --fb $background --ff $text --tb $dmenu_accent --tf $background --fn "Iosevka Slab Bold 11" --line-height 23 -p "Bookmarks" | cut -d ' ' -f1 | wl-copy
bindsym $mod+Shift+m exec sh ~/.local/bin/add-bookmark.sh
bindsym $mod+t exec sh ~/.local/bin/add-todo-txt.sh
bindsym $mod+Shift+t exec ~/.local/bin/manage-file.sh $term ~/org/todo.txt
bindsym $mod+z exec ~/.local/bin/wsearch.sh "firefox --new-window" "https://start.duckduckgo.com/?q="
bindsym $mod+Shift+d exec ~/.local/bin/today.sh $term
bindsym $mod+y exec grep -v '^#' ~/org/sysclip | grep . | bemenu -i -l 8 --nb $background --nf $text --hb "#d3869bff" --hf $background --fb $background --ff $text --tb "#d3869bff" --tf $background --fn "Iosevka Slab Bold 11" --line-height 23 -p "Sysclip" | wl-copy
bindsym $mod+Shift+y exec sh ~/.local/bin/add-sysclip.sh
bindsym $mod+Ctrl+y exec sh ~/.local/bin/rm-sysclip.sh
bindsym $mod+n exec $term -e ranger
bindsym $mod+Shift+p exec wl-paste | xargs firefox --new-window --



