#!/bin/sh
#
# https://wiki.archlinux.org/title/Dunst#Using_dunstify_as_volume/brightness_level_indicator

msgTag="myvolumecontrol"

if [ -z $1 ]; then
    amixer sset Master toggle | sed -En '/\[on\]/ s/.*\[([0-9]+)%\].*/\1/ p; /\[off\]/ s/.*/0/p' > /dev/null
else
    wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ "$@" > /dev/null
fi

val="$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | cut -f2 -d' ')"
volume=$(echo "$val * 100" | bc | cut -f1 -d'.')
mute="$(amixer -c 0 get Master | tail -1 | awk '{print $6}' | sed 's/[^a-z]*//g')"
if [[ "$mute" == "off" ]]; then
    dunstify -a "change-volume-dunst" -t 1000 -u low -h string:x-dunst-stack-tag:$msgTag "Volume muted"
else
    dunstify -a "change-volume-dunst" -t 1000 -u low -h string:x-dunst-stack-tag:$msgTag \
    -h int:value:"$volume" "Volume: ${volume}%"
fi
